<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ravi.shopping.product_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id = "@+id/image"/>

        <TextView
            android:text="NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="59dp"
            android:layout_marginEnd="59dp"
            android:layout_marginTop="33dp"
            android:id="@+id/name"
            android:textColor="#000000"/>

        <TextView
            android:text="PRICE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_marginTop="44dp"
            android:id="@+id/price"
            android:textColor="#000000"/>

        <Button
            android:text="ADD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="119dp"
            android:id="@+id/add" />

        <TextView
            android:text="DESCRIPTION"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/add"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="59dp"
            android:id="@+id/description"
            android:textColor="#000000"/>

        <TextView
            android:text="Product Description:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/description"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:textSize="6pt"
            android:textColor="#000000"/>

        <TextView
            android:text="Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="6pt"
            android:textColor="#000000"
            android:layout_above="@+id/price"
            android:layout_toRightOf="@+id/add"
            android:layout_toEndOf="@+id/add"
            android:layout_marginBottom="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/image"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/image"
            android:layout_marginBottom="56dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:ems="10"
            android:text="Qunatity"
            android:id="@+id/textView2" />

        <EditText
            android:id="@+id/product_qunatity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="0"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/product_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/add"
            android:layout_alignRight="@+id/add"
            android:layout_below="@+id/product_qunatity"
            />


    </RelativeLayout>

</FrameLayout>
