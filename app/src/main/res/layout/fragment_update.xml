<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ravi.shopping.register">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textSize="10pt"
                android:textColor="#000000">
            </TextView>
            <EditText
                android:id="@+id/update_firstname"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textSize="10pt"
                android:textColor="#000000">
            </TextView>
            <EditText
                android:id="@+id/update_lastname"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:layout_width="match_parent">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="10pt"
                android:textColor="#000000">
            </TextView>
            <EditText
                android:id="@+id/update_email"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="10pt"
                android:textColor="#000000">
            </TextView>
            <EditText
                android:id="@+id/update_phone"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp">
            </EditText>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Update Info"
                android:id="@+id/update_customer_info"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Password"
                android:textSize="10pt"
                android:textColor="#000000"
                android:paddingTop="10dp">
            </TextView>

            <EditText
                android:id="@+id/update_current_password"
                android:layout_height="wrap_content"
                android:hint="Current Password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:textSize="10pt"
                android:textColor="#000000">
            </TextView>
            <EditText
                android:id="@+id/update_new_password"
                android:layout_height="wrap_content"
                android:hint="New Password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textSize="10pt"
                android:textColor="#000000">
            </TextView>
            <EditText
                android:id="@+id/update_confirm_password"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp">
            </EditText>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Change Password"
                android:id="@+id/update_password_info"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="10pt"
                android:textColor="#000000"
                android:paddingTop="10dp">
            </TextView>
            <EditText
                android:id="@+id/update_address"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:lines="5">
            </EditText>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/update_address_info"
                android:layout_gravity="center"
                android:text="Update Address"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/update_delete_user"
                android:layout_gravity="center"
                android:text="Delete Account"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
